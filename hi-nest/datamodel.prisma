enum BindingType {
  HERO
  STORY
  TOPIC
}

type Topic {
  id: ID! @id

  title: String!

  sourceType: BindingType!

  source: Int!

  targetType: BindingType!

  target: Int!

  createdAt: DateTime! @createdAt

  updatedAt: DateTime! @updatedAt
}

type Story {
  id: ID! @id

  title: String

  createdAt: DateTime! @createdAt

  updatedAt: DateTime! @updatedAt
}

type Hero {
  id: ID! @id

  name: String!

  createdAt: DateTime! @createdAt

  updatedAt: DateTime! @updatedAt
}
